# Crossword KDP Generator Environment Variables

# Application
NODE_ENV=production
PORT=3000

# N8N Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/crossword
N8N_API_KEY=your_n8n_api_key_here

# Replicate API (for AI-powered word/clue generation)
REPLICATE_API_TOKEN=your_replicate_token_here

# PDF Generation
PDF_QUALITY=high
IMAGE_DPI=300

# Cache Settings
REDIS_URL=redis://redis:6379
CACHE_TTL=3600

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100

# Coolify specific
COOLIFY_APP_ID=crossword-generator
COOLIFY_DOMAIN=your-domain.com